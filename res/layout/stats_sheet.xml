<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:gravity = "center"
        android:layout_width = "match_parent"
        android:layout_height="0dip"
        android:layout_weight = "3"
		android:text="@string/stats"
		android:textSize = "40sp"/>    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="9">
	    
	    <TextView 
	        android:id="@+id/win_percentage"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
	    
	    <TextView 
	        android:id="@+id/current_streak"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
	    
	    <TextView 
	        android:id="@+id/total_wins"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
	    
	    <TextView 
	        android:id="@+id/total_losses"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
	    
	    <TextView 
	        android:id="@+id/longest_winning_streak"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
	    
	    <TextView 
	        android:id="@+id/longest_losing_streak"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
	    
	    <TextView 
	        android:id="@+id/longest_word"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        />
	</LinearLayout>
	<Button
	    android:id="@+id/backButton"
	    android:layout_width="wrap_content"
	    android:layout_height="0dip"
	    android:layout_weight="2"
	    android:layout_margin="10dp"
	    android:text="@string/back_button"
	    />
</LinearLayout>
